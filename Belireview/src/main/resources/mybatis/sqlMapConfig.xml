	   		<typeAlias alias="groupModel" type="yogi.group.GroupModel" />
	   </typeAliases> -->
	<!-- SQL 정의한 xml문서 Mapping -->
	<mappers>
		<mapper resource="mybatis/admin_SQL.xml" />
		<mapper resource="mybatis/drama_SQL.xml" />
		<mapper resource="mybatis/drama_comment_SQL.xml" />
		<mapper resource="mybatis/movie_SQL.xml" />
		<mapper resource="mybatis/ad_SQL.xml" />
		<!-- <mapper resource="mybatis/main_SQL.xml" />  -->
		 <mapper resource="mybatis/member_SQL.xml" />
		 <mapper resource="mybatis/user_SQL.xml" />
	</mappers>
	
</configuration>

